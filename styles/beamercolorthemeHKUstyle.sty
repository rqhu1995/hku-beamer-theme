\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemeHKUstyle}[2024/01/01 v1.0.0 The HKU Beamer Theme - Color Theme]
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Theme options and definitions
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%theme options
\DeclareOptionBeamer{red}{\def\beamer@xducolor{red}}% Alternative red color scheme
\DeclareOptionBeamer{green}{\def\beamer@xducolor{green}}% HKU Green (default)
\DeclareOptionBeamer{sidebar}{\def\beamer@xdusidebar{true}}% Enable sidebar
\ProcessOptionsBeamer

\def\beamer@xducolorgreen{green}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%beamer specific options
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{
  \ifx\beamer@xducolor\undefined%
    % Default: HKU Green
    \definecolor{beamer@barcolor}{RGB}{34,94,82}% HKU Green auxiliary color (lighter shade)
    \definecolor{beamer@headercolor}{RGB}{2,70,56}% HKU Green (Pantone 3308C, #024638)
    \definecolor{beamer@normaltextcolor}{RGB}{0,0,0}% black
  \else%
    \ifx\beamer@xducolor\beamer@xducolorgreen%
      % Explicit green option
      \definecolor{beamer@barcolor}{RGB}{34,94,82}% HKU Green auxiliary color (lighter shade)
      \definecolor{beamer@headercolor}{RGB}{2,70,56}% HKU Green (Pantone 3308C, #024638)
      \definecolor{beamer@normaltextcolor}{RGB}{0,0,0}% black
    \else%
      % Red option
      \definecolor{beamer@barcolor}{RGB}{180,76,76}% Alternative red auxiliary color
      \definecolor{beamer@headercolor}{RGB}{175,33,37}% Alternative red color
      \definecolor{beamer@normaltextcolor}{RGB}{0,0,0}% black
    \fi%
  \fi%
  
  \setbeamercolor{structure}{fg=beamer@headercolor}
  \setbeamercolor{normal text}{fg=beamer@normaltextcolor,bg=white}
  \setbeamercolor{frametitle}{fg=white,bg=beamer@headercolor}
  \ifx\beamer@xdusidebar\undefined%
    {}%
  \else%
    \setbeamercolor{HKUsidebar}{fg=gray!50,bg=white}%
  \fi%
}%end of beamer specific options

\mode<all>
